{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "outDir": "dist",
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es6",
    "lib": ["es6"],
    "moduleResolution": "node",
    "importHelpers": true,
    "types": ["node", "reflect-metadata", "mocha"],
    "typeRoots" : [
      "@types",
      "node_modules/@types",
    ],
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./node_modules", "src/database/migration/**/*.ts"]
}
