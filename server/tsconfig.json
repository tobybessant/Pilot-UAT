{
  "compilerOptions": {
    "module": "commonjs",
    "strict": true,
    "outDir": "dist",
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "es6",
    "lib": ["es6"],
    "moduleResolution": "node",
    "importHelpers": true,
    "types": ["node", "reflect-metadata"]
  },
  "include": ["./src/**/*.ts"]
}
