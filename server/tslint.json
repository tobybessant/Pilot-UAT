{
  "extends": "tslint:recommended",
  "rules": {
    "max-line-length": {
      "options": [ 140 ]
    },
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "quotemark": [ true, "double" ],
    "only-arrow-functions": false,
    "semicolon": true,
    "prefer-for-of": false
  },
  "linterOptions": {
    "exclude": [ "src/database/migration/**/*.ts" ]
  }
}
